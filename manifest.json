{
  "manifest_version": 3,
  "name": "Quick Search - Spotlight",
  "version": "1.0.0",
  "description": "Spotlight-style fuzzy search for tabs, bookmarks, and history. Press Ctrl+Shift+K to open.",
  "permissions": ["tabs", "bookmarks", "history", "activeTab", "scripting"],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["lib/fuse.min.js", "content.js"],
      "css": ["spotlight.css"],
      "run_at": "document_end"
    }
  ],
  "commands": {
    "toggle-spotlight": {
      "suggested_key": {
        "default": "Ctrl+Shift+F",
        "mac": "Command+Shift+F"
      },
      "description": "Toggle Spotlight Search"
    }
  },
  "action": {
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    },
    "default_title": "Quick Search (Ctrl+Shift+K)"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
